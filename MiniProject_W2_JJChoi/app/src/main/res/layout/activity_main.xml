<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.choijinjoo.miniproject_w2_jinjoo.ui.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/toolbar" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/filter_height"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtvDistance"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/filter_distance"
                android:textColor="@drawable/filter_selector"
                android:textSize="@dimen/textSize_medium"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtvStar"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/filter_star"
                android:textColor="@drawable/filter_selector"
                android:textSize="@dimen/textSize_medium"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtvCreatedAt"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/filter_createdAt"
                android:textColor="@drawable/filter_selector"
                android:textSize="@dimen/textSize_medium"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imgvRearrange"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:padding="6dp"
                android:src="@drawable/rearrange_selector" />


        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recvRestaurants"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

    <include layout="@layout/navigation" />


</android.support.v4.widget.DrawerLayout>
